<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_flay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:background="@drawable/attnheaderbg"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_45sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backicon"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_backsvg"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yearly Percentage"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>


            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_filter"></ImageView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sec_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/ll_flay"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
           android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical"
            android:visibility="visible">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="APR"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_horizontal"
                android:text="MAY"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_horizontal"
                android:text="JUN"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"

                android:gravity="center_horizontal"
                android:text="JULY"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"

                android:gravity="center_horizontal"
                android:text="AUG"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_horizontal"
                android:text="SEP"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_horizontal"
                android:text="OCT"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_horizontal"
                android:text="NOV"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_horizontal"
                android:text="DEC"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="JAN"
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center_horizontal"
                android:text="FEB"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center_horizontal"
                android:text="MAR"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />
        </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="450dp"
            android:background="#000"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_20sdp"
            android:visibility="visible">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_YearlyPercentageBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical"

            android:visibility="gone">

            <View
                android:id="@+id/vv_janView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:background="#000" />

            <View
                android:id="@+id/vv_favview"
                android:layout_width="269dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="#ff00" />

            <View
                android:id="@+id/vv_marchView"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="#06b954" />

            <View
                android:id="@+id/vv_aprlView"
                android:layout_width="@dimen/_179sdp"
                android:layout_height="@dimen/_20sdp"

                android:layout_marginTop="@dimen/_15sdp"

                android:background="#0609c6" />

            <View
                android:id="@+id/vv_mayView"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="20dp"

                android:layout_marginTop="@dimen/_15sdp"
                android:background="#c408a8" />

            <View
                android:id="@+id/vv_junView"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="#de7d07" />

            <View
                android:id="@+id/vv_julyView"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="#c408a8" />

            <View
                android:id="@+id/vv_augView"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="#de7d07" />

            <View
                android:id="@+id/vv_sptView"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="#06b954" />

            <View
                android:id="@+id/vv_octView"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="20dp"

                android:layout_marginTop="@dimen/_20sdp"

                android:background="#de7d07" />

            <View
                android:id="@+id/vv_noveView"
                android:layout_width="168dp"
                android:layout_height="20dp"

                android:layout_marginTop="@dimen/_20sdp"

                android:background="#0609c6" />

            <View
                android:id="@+id/vv_decView"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="20dp"

                android:layout_marginTop="@dimen/_15sdp"

                android:background="#de7d07" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/ll_bottom"
        android:visibility="visible"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="50dp"
        android:background="#000" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/cardbgtopbg"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:gravity="center"
            android:text="Swipe Touch"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"></TextView>

        <!-- <ImageView
             android:id="@+id/iv_bottomback"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1.7"
             android:gravity="end"
             android:src="@drawable/ic_next"></ImageView>
 -->

    </LinearLayout>
</RelativeLayout>
