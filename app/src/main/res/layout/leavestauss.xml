<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:padding="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardbg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:layout_gravity="end|center"
            android:background="@drawable/cardbgsms"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:background="@drawable/cardbgsms">
                <LinearLayout
                    android:id="@+id/ll_leaverea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_homwworkdetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leave Reason:-"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp">

                    </TextView>

                    <TextView
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:id="@+id/tv_leavereason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leave Reason"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp">

                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@+id/ll_leaverea"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="From date"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"></TextView>

                        <TextView
                            android:id="@+id/iv_fromdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="26-11-20"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="end|center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="To date"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"></TextView>
                        <TextView
                            android:id="@+id/tv_todate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:gravity="end"
                            android:text="12.11.2020"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"></TextView>
                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:-"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_12sdp">

                </TextView>

                <TextView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/tv_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:textColor="@color/black"
                    android:text="akufakf"
                    android:textSize="@dimen/_12sdp">

                </TextView>
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>